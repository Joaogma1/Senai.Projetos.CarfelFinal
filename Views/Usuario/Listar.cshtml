@using Projeto_Senai.Carfel.Final.Models;

@{
    Layout= "Admin";
}
<h3 class="Top-list">Listagem de Usuários</h3>


<div class="container">
    <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail </th>
            <th>Admin </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
     @foreach (var item in ViewData["Usuarios"] as List<UsuarioModel>)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Administrador</td>
                <td class="text-center"><a class='btn btn-info btn-xs' href="/Usuario/Editar?id=@item.Id"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="/Usuario/Excluir?id=@item.Id" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
            </tr>
        }
           
    </table>
    </div>
</div>