@using Projeto_Senai.Carfel.Final.Models;

@{
    Layout= "LoginAdmin";
}
<h3>Listagem de Usuários</h3>

@TempData["Mensagem"]

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["Usuarios"] as List<UsuarioModel>)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Administrador
                </td>
                <td>
                    <a href="/Usuario/Excluir?id=@item.Id">Excluir</a>
                    <a href="/Usuario/Editar?id=@item.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>