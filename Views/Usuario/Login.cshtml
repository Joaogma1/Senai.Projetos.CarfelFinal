@{
Layout= "LoginAdmin";
}

@ViewBag.Mensagem

<div class="login-page">
    <div class="form">
        <form class="register-form" action="/Usuario/Cadastro" method="POST">
        <h2>Cadastro</h2>
            <input type="text" placeholder="Nome" name="nome" />
            <input type="text" placeholder="Endereço de email" name="email" />
            <input type="password" placeholder="Senha" name="senha" />
            <button type="submit">Cadastrar</button>
            <p class="message">Já registrado? <a href="#">Logar</a></p>
        </form>
        <form class="login-form" action="/Usuario/Login" method="POST">
        <h2>Login</h2>
            <input type="text" name="email" placeholder="E-mail" />
            <input type="password" name="senha" placeholder="Senha" />
            <button type="submit">Logar</button>
            <p class="message">Ainda não registrado? <a href="#">Cadastrar</a></p>
        </form>
    </div>
</div>